flex-version = flex

@import 'nib'
@import url('https://fonts.googleapis.com/css?family=Roboto+Condensed:400,700|Roboto:300,400,500')

global-reset()

@import './config.styl'

// Variables
:root
	--color-active #63acf9
	--color-border #e0e0e0
	--color-border-text #bbbbbb
	--color-control #bbbbbb
	--color-control-text #999999
	--color-bg #f0f0f0
	--color-field #f9f9f9
	--color-text #444444
	--color-parameter-hover #e4e4e4
	--color-seek #ff3854
	--font-monospace 'Roboto Condensed', monospace, sans-serif
	--font-code 'Fira Code', monospace, sans-serif
	--font-normal 'Roboto', Helvetica, Arial, sans-serif
	--color-menu-bg #000000
	--color-menu-text #ffffff
	--color-menu-field #000000
	--color-menu-border #333
	// Layout
	--layout-param-height 2.8em
	--layout-param-field-1w 6em
	--layout-param-field-gap-widget 0.5em
	--layout-param-field-gap-box 0.3em
	--layout-input-height 2em
	--layout-popover-padding 0.5em

*, ::after, ::before
	box-sizing border-box
	outline none
	-webkit-tap-highlight-color transparent

// Reset form elements
input, button, select
	margin 0
	padding 0
	outline none
	border 0
	background transparent
	color inherit
	font-size inherit
	appearance none

	&::-webkit-outer-spin-button, &::-webkit-inner-spin-button
		margin 0
		-webkit-appearance none

html
	font-size var(--font-size)

.ui
	background var(--color-bg)
	font-size var(--font-size)
	font-family var(--font-normal)
	user-select none

// Parameter
.param-field

	&--1w, &--2w, &--3n, &--4n
		margin-right var(--layout-param-field-gap-widget)

	&--1w
		width var(--layout-param-field-1w)

	&--2w
		width 'calc(%s * 2)' % var(--layout-param-field-1w)

	&--3n
		width 'calc(%s / 1.5 * 3)' % var(--layout-param-field-1w)

	&--4n
		width 'calc(%s / 1.5 * 4)' % var(--layout-param-field-1w)

// SVG
.svg-overlay
	position fixed
	top 0
	left 0
	z-index 2001
	width 100vw
	height 100vh

.svg-ui
	overflow visible

.svg-overlay, .svg-ui
	svg
		position absolute
		top 0
		left 0
		width 100%
		height 100%

	.guide
		stroke var(--color-border)
		stroke-width 1px
		fill none

	.stroke
		stroke var(--color-active)
		stroke-width 3px
		fill none

	.dashed-stroke
		stroke var(--color-active)
		stroke-width 2px
		stroke-dasharray 3 2
		fill none

	.narrow-stroke
		stroke var(--color-active)
		stroke-width 2px
		fill none

	.fill
		fill var(--color-active)

	.text
		font-weight 700
		font-family var(--font-monospace)
		pointer-events none
		fill var(--color-active)
